<mvc:View
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  controllerName="ui5.walkthrough.controller.Collaborators"
  class="listPageBackground"
  displayBlock="true">

    <Bar>
        <contentMiddle>
            <Title text="Go task" />
        </contentMiddle>
        <contentRight>
            <Button
                icon="images/gopher-logout.png"
                text="Logout"
                type="Emphasized"
                press=".onLogout"
                class="dlgPrimaryBtn"
                iconFirst="true"
                iconDensityAware="false"/>
        </contentRight>
    </Bar>

  <HBox width="100%" justifyContent="Center" class="todosHeadlineBox">
    <Image src="images/waving-gopher.png" class="todosGopher"/>
  </HBox>

  <VBox class="sapUiSmallMargin pageContentFadeIn">
    <VBox class="tablePeekWrap">
      <Table id="collaboratorsTable"
             width="100%"
             class="myFancyTable neoGlass neonTable sapUiSizeCompact columns"
             items="{collaborators>/users}"
             sticky="ColumnHeaders,HeaderToolbar,InfoToolbar"
             growing="true"
             growingScrollToLoad="true"
             growingThreshold="12"
             noDataText="No collaborators yet">

        <headerToolbar>
          <Toolbar design="Transparent" class="noHeaderDivider tableHeaderToolbar">
            <Button icon="sap-icon://nav-back"
                    text="Back"
                    type="Transparent"
                    tooltip="Back"
                    press=".onBackPress"
                    class="actionNeo">
              <layoutData>
                <ToolbarLayoutData shrinkable="false"/>
              </layoutData>
            </Button>

            <HBox alignItems="Center">
              <core:Icon src="sap-icon://checklist-item" class="titleIcon"/>
              <Title text="List Collaborators" level="H4" class="titleNeon"/>
              <ObjectStatus text="{= ${collaborators>/totalCount} ? ${todos>/totalCount} + ' items' : ''}"
                            state="Success"
                            class="countBadge sapUiTinyMarginBegin"/>
            </HBox>

            <ToolbarSpacer/>

            <ToolbarSpacer/>

            <Button id="btnAddCollaborator"
                    icon="sap-icon://add"
                    text="Add Collaborator"
                    type="Emphasized"
                    class="createBtnNeo"
                    press=".onAddPress"/>
          </Toolbar>
        </headerToolbar>

        <infoToolbar>
          <Toolbar design="Transparent" class="infoStripe">
            <core:Icon src="sap-icon://filter" class="infoIcon"/>
            <Text text="Showing recent collaborators" class="infoText"/>
            <ToolbarSpacer/>
            <Text text="{= ${collaboraotrs>/pageInfo/endCursor} ? 'Cursor: ' + ${collaboraotrs>/pageInfo/endCursor} : ''}" class="cursorHint"/>
          </Toolbar>
        </infoToolbar>

        <columns>
          <Column width="14rem" hAlign="Center">
            <HBox alignItems="Center" justifyContent="Center">
              <core:Icon src="sap-icon://key" class="colIcon"/>
              <Text text="ID" class="colHead"/>
            </HBox>
          </Column>

          <Column hAlign="Center">
            <HBox alignItems="Center" justifyContent="Center">
              <core:Icon src="sap-icon://product" class="colIcon"/>
              <Text text="Email" class="colHead"/>
            </HBox>
          </Column>  

          <Column width="8rem" hAlign="Center" class="lightGreen">
            <VBox alignItems="Center">
              <Text text="Actions" class="colHead"/>
            </VBox>
          </Column>
        </columns>

        <items>
          <ColumnListItem vAlign="Middle" class="rowHoverGlow">
            <cells>
              <Text text="{collaborators>id}" class="monoText"/>
              <ObjectIdentifier title="{collaborators>email}" text="" class="nameCell"/>

              <HBox justifyContent="Center" class="actionsHBox">
                <Button icon="sap-icon://delete" type="Transparent" tooltip="Delete" class="actionNeo" press=".onDeletePress"/>
              </HBox>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </VBox>

    <HBox width="100%" justifyContent="End" alignItems="Center"
          class="paginationHBox neonPager sapUiSmallMarginTop">
      <Button id="btnPrev" text="Previous" class="pagerBtn" enabled="{collaborators>/hasPrev}" press=".onPrevPage"/>
      <Button id="btnNext" text="Next" class="pagerBtn" enabled="{collaborators>/hasNext}" press=".onNextPage"/>
    </HBox>
  </VBox>
</mvc:View>
