<mvc:View
	controllerName="ui5.walkthrough.controller.Detail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:wt="ui5.walkthrough.control"
>
	<Page
		title="{i18n>todoDetailPageTitle}"
		showNavButton="true"
		navButtonPress=".onNavBack"
	>
		<ObjectHeader
			responsive="true"
			fullScreenOptimized="true"
			intro="{todo>name}"
			title="{todo>description}"
		>
			<attributes>
				<ObjectAttribute
					title="{i18n>todoDetailName}"
					text="{todo>name}"
				/>
				<ObjectAttribute
					title="{i18n>todoDetailTitle}"
					text="{todo>description}"
				/>
			</attributes>
		</ObjectHeader>
	</Page>
</mvc:View>
