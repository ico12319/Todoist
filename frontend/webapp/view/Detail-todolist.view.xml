<mvc:View
    controllerName="ui5.walkthrough.controller.Detail-todolist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:wt="ui5.walkthrough.control"
>
    <Page
        title="Todo Lists Details"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <ObjectHeader
            responsive="true"
            fullScreenOptimized="true"
            intro="{todoLists>name}"
        >
            <attributes>
                <ObjectAttribute
                    title="{i18n>todoDetailName}"
                    text="{todoLists>name}"
                />
            </attributes>
        </ObjectHeader>
        <Panel accessibleRole="Region">
        	<headerToolbar>
                <Toolbar>
				    <Title text="{i18n>todoTableTitle}" />
			    </Toolbar>
            </headerToolbar>   
            <Table
                id="todoList"
                class="sapUiResponsiveMargin"
                width="auto"
                items="{
                        path: 'todos>/'
                }"
            >
                <columns>
                    <Column>
                        <Text text="{i18n>columnNameTodos}" />
                    </Column>
                    <Column minScreenWidth="Small" demandPopin="true">
                        <Text text="{i18n>columnnDescriptionTodos}" />
                    </Column>
                    <Column minScreenWidth="Small" demandPopin="true">
                        <Text text="{i18n>columnnActionsTodos}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{todos>name}" />
                            <Text text="{todos>description}" />
                            <Button
                                text="{i18n>deleteButtonText}"
                                type="Reject"
                                press="onDeleteTodoFromTodoList"
                                icon="sap-icon://delete"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Panel>
    </Page>
</mvc:View>
