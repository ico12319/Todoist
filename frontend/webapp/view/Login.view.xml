<mvc:View
  controllerName="ui5.walkthrough.controller.Login"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">

  <Page class="loginPageBackground" title="Login" showHeader="false">
    <content>
      <VBox fitContainer="true" alignItems="Center" justifyContent="Center" class="loginWrapper">
        <VBox class="loginBox neoGlass pageContentFadeIn" width="380px">
          <HBox alignItems="Center" justifyContent="Center" class="loginLogoRow">
            <Image src="images/gopher-avatar.png" class="loginLogo"/>
          </HBox>

          <Text text="GoTask Login" textAlign="Center" class="loginTitle"/>
          <Text text="Login with GitHub to access your personal todo-list manager."
                textAlign="Center"
                class="loginSubtitle" />

          <Button
            icon="images/github-icon.png"
            text="Login with GitHub"
            type="Emphasized"
            press=".onLoginWithGitHub"
            class="githubButton createBtnNeo"
            iconFirst="true"
            iconDensityAware="false"/>
        </VBox>
      </VBox>
    </content>
  </Page>
</mvc:View>
