<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="ui5.walkthrough.controller.Collaborators"
  class="listPageBackground"
  displayBlock="true">

  <HBox width="100%" justifyContent="Center" class="todosHeadlineBox">
      <Title text="Collaborators" level="H1" class="todosHeadline"/>
  </HBox>

  <Table id="collabsTable"
         width="70%"
         class="myFancyTable todoTableCustom sapUiSizeCompact"
         items="{collaborators>/users}"
         growing="true"
         growingScrollToLoad="true"
         noDataText="No collaborators yet">

      <columns>
          <Column width="11rem" hAlign="Center"><Text text="User ID"/></Column>
          <Column               hAlign="Center"><Text text="E-mail"/></Column>
          <Column width="8rem"  hAlign="Center" styleClass="lightGreen">
              <Text text="Actions"/>
          </Column>
      </columns>

      <items>
          <ColumnListItem>
              <cells>
                  <Text text="{collaborators>id}"/>
                  <Text text="{collaborators>email}"/>
                  <HBox justifyContent="Center">
                      <Button icon="sap-icon://delete"
                              type="Transparent"
                              tooltip="Remove collaborator"
                              press=".onDeletePress"/>
                  </HBox>
              </cells>
          </ColumnListItem>
      </items>
  </Table>
  <HBox justifyContent="Center" alignItems="Center" class="paginationHBox sapUiSmallMarginTop">
      <Button id="btnPrev" text="Previous" enabled="{collaborators>/hasPrev}" press=".onPrevPage"/>
      <Button id="btnNext" text="Next" enabled="{collaborators>/hasNext}" press=".onNextPage"/>
    </HBox>
</mvc:View>
